mixin promo()
  -
    var featList = [
      {
        modif: "web",
        text: ["50,000", 'Websites'],
      },
      {
        modif: "countries",
        text: ["100+", 'Countries']
      },
      {
        modif: "lang",
        text: ["25", 'Languages']
      },
      {
        modif: "place",
        text: ["15000+",'Placements'],
      }
    ]

  section.promo
    .promo__container.container
      .promo__left
        h1.promo__title Link Building Agency
        p.promo__text Description: Securing Media is an international link building agency, that helped more than 500+ SEO agencies to secure more than 25000 media websites.
        .promo__btns
          +appButton('secondary', 'link', '#contact', 'Book Call')
      ul.promo__feat-list
        each item in featList
          li.promo__feat-list-item(class=`promo__feat-list-item--${item.modif}`)
            each text in item.text
              p= text
